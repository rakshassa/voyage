<!DOCTYPE html>
<html>
  <head>
    <title>Voyage</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <% if current_user %>
        <div class="container p-3 mx-auto">
          <nav class="navbar navbar-expand-lg container" style="background: #F2D5B7;">
            <%= link_to "Voyage", root_path, class: "nav-brand" %>
            <span class="navbar-text p-3 mx-auto">
              Signed in as:<br> <strong><%= current_user.display_name %></strong>
            </span>
            <ul class="navbar-nav mr-auto">
              <li class="nav-item active p-3">
                <%= link_to "Sign out", signout_path, class: "nav-link" %>
              </li>
              <li class="nav-item active p-3">
                <%= link_to "Dashboard", root_path, class: "nav-link" %>
              </li>
              <li class="nav-item active p-3">
                <%= link_to "Settings", edit_user_path(id: current_user.id), class: "nav-link" %>
              </li>
              <li class="nav-item active p-3">
                <%= link_to "Scoreboard", scoreboard_teams_path, class: "nav-link" %>
              </li>
            </ul>
          </nav>
        </div>
      <% else %>
        <div class="text-center mx-auto login-pane p-3" style="padding: 10px;">
          <%= link_to image_tag("google-login.png", border: 0), "/auth/google_oauth2", id: "google_sign_in" %>
          <%= link_to image_tag("facebook-login.png", border: 0), "/auth/facebook", id: "facebook_sign_in" %>
          <%= link_to image_tag("discord-login.png", border: 0), "/auth/discord", id: "discord_sign_in" %>
<!--           <%= link_to image_tag("twitter-login.png", border: 0), "/auth/twitter", id: "twitter_sign_in" %> -->
        </div>
      <% end %>

    <div class="container" >
      <div class="p-3" style="background: #F2D5B7;">
        <p id="notice"><%= notice %></p>
        <%= yield %>
      </div>
    </div>
  </body>
</html>

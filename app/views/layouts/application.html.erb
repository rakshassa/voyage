<!DOCTYPE html>
<html>
  <head>
    <title>Voyage</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="p-3 mb-2 bg-light text-dark">
      <% if current_user %>
        <div class="row">
          <div class="col-md-3"></div>
          <div class="text-center centered-content col-md-6" style="padding: 10px;">
            <div class="col-md-3">Signed in as:<br> <strong><%= current_user.display_name %></strong></div>
            <div class="col-md-2"><%= link_to "Sign out", signout_path, id: "sign_out" %></div>
            <div class="col-md-2"><%= link_to "Dashboard", root_path, id: "dashboard" %></div>
            <div class="col-md-2"><%= link_to "Settings", edit_user_path(id: current_user.id), id: "settings" %></div>
            <div class="col-md-2"><%= link_to "Scoreboard", scoreboard_teams_path, id: "settings" %></div>
          </div>
        </div>
      <% else %>
        <center><div class="text-center" style="padding: 10px;">
          <%= link_to image_tag("google-login.png", border: 0), "/auth/google_oauth2", id: "google_sign_in" %>
          <%= link_to image_tag("facebook-login.png", border: 0), "/auth/facebook", id: "facebook_sign_in" %>
          <%= link_to image_tag("discord-login.png", border: 0), "/auth/discord", id: "discord_sign_in" %>
<!--           <%= link_to image_tag("twitter-login.png", border: 0), "/auth/twitter", id: "twitter_sign_in" %> -->
        </div></center>
      <% end %>
    </div>
    <div class="container">
      <div class="card" style="background: #F2D5B7;">
        <div class="card-body" style="padding: 10px;">
          <p id="notice"><%= notice %></p>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>


<%= form_for(quest) do |f| %>
  <div class="col-6">
    <%= f.label :searchchurch, "Name", class: "font-weight-bold" %>
    <div class="input-group input-group-lg">
      <%= f.text_field :name, placeholder: " Type your Quest Name here ", class: 'form-control input-lg', id: "searchurch" %>

      <span class="input-group-btn">
        <%= f.submit 'Save', class: "btn btn-default btn-lg" %>
      </span>
    </div>
  </div>
  <br>
  <%= render 'shared/errors', record: quest %>

<% end %>

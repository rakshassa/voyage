
<div class="panel-heading centered-content">
  <h4 class="font-weight-bold">Your Quests</h4>
</div>

<div class="panel-body centered-content">
  <div class="row" style="padding: 10px;">
    <% @team.available_quests.not_completed.each do |teamquest| %>
      <%= link_to teamquest_path(id: teamquest.id), class: "btn btn-large btn-primary" do %>
          <div class="row"><%= teamquest.quest.name %></div>
          <div class="row"><%= "(" + teamquest.score_earned.to_s + "/" + teamquest.quest.total_score.to_s + ")" %></div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="panel-heading centered-content">
  <a href="#" id="show_completed_quests">Completed Quests</a>
</div>
<!-- Collapsible element -->
<div  id="completed_quests" class="hidden panel-body centered-content">
  <div class="row" style="padding: 10px;">
    <% @team.available_quests.completed.each do |teamquest| %>
      <%= link_to teamquest_path(id: teamquest.id), class: "btn btn-large btn-primary" do %>
          <div class="row"><%= teamquest.quest.name %></div>
          <div class="row"><%= "(" + teamquest.score_earned.to_s + "/" + teamquest.quest.total_score.to_s + ")" %></div>
      <% end %>
    <% end %>
  </div>
</div>
<!-- / Collapsible element -->

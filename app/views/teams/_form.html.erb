<%= form_for(@team) do |f| %>

  <div class="col-6">
    <%= f.label :name, "Name", class: "font-weight-bold" %>
    <div class="input-group input-group-lg">
      <%= f.text_field :name, placeholder: " Type your Team Name here ", class: 'form-control input-lg' %>
    </div>
  </div>

  <% unless current_user.is_admin %>
    <%= f.hidden_field :team_captain_id, :value => current_user.id %>
  <% end %>

  <%= render 'shared/errors', record: @team %>

  <br><br>
  <div class="actions">
    <%= f.submit ' Save ', :class => 'btn btn-large btn-primary' %>
    <%= link_to 'Cancel', root_path, :class => 'btn btn-large btn-primary' %>
  </div>
<% end %>



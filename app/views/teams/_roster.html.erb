<table class="table table-hover table-striped table-nonfluid">
    <thead class="color-header">
      <tr>
        <th scope="col">Team Members</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>

  <tbody>
    <% @team.users.each do |user| %>
      <tr>
        <th scope="row"><%= user.display_name %>&nbsp&nbsp&nbsp&nbsp</th>

        <% if @team.captain.id == user.id || @team.captain.id != current_user.id %>
          <td itemscope><%= ' ' %></td>
          <td itemscope><%= ' ' %></td>
        <% else %>
          <td itemscope><%= link_to 'Kick', kick_team_path(@team, user_id: user.id), method: :post, :title => 'Kick ' + user.name, data: { confirm: 'Are you sure you want to kick ' + user.display_name + '?' } %></td>
          <td itemscope><%= link_to 'Promote', promote_team_path(@team, user_id: user.id), method: :post, :title => 'Promote ' + user.name, data: { confirm: 'Are you sure you want ' + user.display_name + ' to be the team captain?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
